<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen1"
    tools:context=".Splash_Screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME TO"
        android:textSize="24sp"
        android:textColor="@color/welcome"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="31dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mining Truck"
        android:textSize="32sp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="31dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scheduling Alarm"
        android:textSize="32sp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="31dp"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_button_splashscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="SIGN IN"
        android:background="@drawable/button_splashscreen"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudah Punya Akun?"
        android:textSize="10sp"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="130dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/id_spalsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="10sp"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="220dp"
        android:textColor="@color/welcome"/>

</RelativeLayout>